<%= form_for @user do |f| %>

  <div><%= f.label :name %>
  <%= f.text_field :name %></div>

  <div><%= f.label :username %>
  <%= f.text_field :username %></div>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone_number %>
  <%= f.number_field :phone_number %>

  <%= f.label :location_id %>
  <%= f.collection_select :location_id, @locations, :id, :address %>
  
  <%= f.submit "Submit" %>
<% end %>
