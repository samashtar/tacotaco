<h1>Create a User</h1>

<%= form_for @user do |f| %>

  <div><%= f.label :name %>
  <%= f.text_field :name %></div>

  <div><%= f.label :username %>
  <%= f.text_field :username %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :email %>
  <%= f.text_field :email %></div>

  <div><%= f.label :address %>
  <%= f.text_field :address %></div>

  <div><%= f.label :phone_number %>
  <%= f.number_field :phone_number %></div>

  <div><%= f.label :location_id %>
  <%= f.collection_select :location_id, @locations, :id, :name %></div>

  <%= f.submit "Submit" %>

<% end %>

<br>

<h3><%=link_to "Return to home?", '/'%></h3>
