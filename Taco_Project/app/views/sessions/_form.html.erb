<%= form_tag '/login' do %>
  <div><%= label_tag :username %><br>
  <%= text_field_tag :username %></div>
  <div><%= label_tag :password %><br>
  <%= password_field_tag :password %></div>
  <div><%= label_tag :password_confirmation %><br>
  <%= password_field_tag :password_confirmation %></div><br>
  <%= submit_tag "Submit" %>
<% end %>
